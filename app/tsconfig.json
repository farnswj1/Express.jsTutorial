{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ESNext",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
  },
  "include": ["src"]
}
